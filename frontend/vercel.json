{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/css/(.*)",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable",
        "vary": "Accept-Encoding"
      },
      "dest": "/css/$1"
    },
    {
      "src": "/js/(.*)",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable",
        "vary": "Accept-Encoding"
      },
      "dest": "/js/$1"
    },
    {
      "src": "/public/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/public/$1"
    },
    {
      "src": "/(.*\\.(ico|png|jpg|jpeg|svg))",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/$1"
    },
    {
      "src": "/index.html",
      "headers": { 
        "cache-control": "no-cache, no-store, must-revalidate",
        "pragma": "no-cache",
        "expires": "0"
      },
      "dest": "/index.html"
    },
    {
      "src": "/pages/(.*\\.html)",
      "headers": { 
        "cache-control": "no-cache, no-store, must-revalidate",
        "pragma": "no-cache",
        "expires": "0"
      },
      "dest": "/pages/$1"
    },
    {
      "src": "/(app|auth|temp-auth|profile|auth/reset-password)",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 